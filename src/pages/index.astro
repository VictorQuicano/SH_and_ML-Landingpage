---
import Layout from '../components/Layout.astro';
import underConstruction from '../content/images/underconstruction.png';
import { Image } from 'astro:assets';
import Slider from '../components/Slider.jsx';

const allServices = [
  {
    "name": "SERVICIOS DE INGENIERIA PARA OBRA",
    "description": "Supervisión, ejecución y diseño de obras civiles y edificaciones; elaboración de expedientes, presupuestos y estudios técnicos para proyectos de construcción.",
    "path": "servicios/ingenierias-para-obras/"
  },
  {
    "name": "ARQUITECTURA",
    "description": "Diseño arquitectónico de viviendas, edificaciones comerciales e industriales; remodelaciones, modelado 3D, renders y asesoría para trámites municipales.",
    "path": "servicios/arquitectura/"

  },
  {
    "name": "ESTUDIOS DE MECANICA DE SUELOS, GEOTECNIA Y CONCRETO",
    "description": "Investigaciones, ensayos y cálculos geotécnicos para cimentaciones, estabilidad de taludes, diseño de mezclas y control de calidad de materiales.",
    "path": "servicios/mecanica-de-suelos/"
  },
  {
    "name": "TOPOGRAFIA PROFESIONAL",
    "description": "Mediciones topográficas con tecnología avanzada, replanteo y control de obra, elaboración de informes y certificación de puntos georreferenciados.",
    "path": "servicios/topografia/"
  },
  {
    "name": "SANEAMIENTO FISICO LEGAL",
    "description": "Asesoría técnica y legal para regularización y saneamiento de predios urbanos y rurales, incluyendo gestión de licencias y trámites municipales.",
    "path": "servicios/saneamiento/"
  }
];
const imagesPath = [
  '/images/00_inicio/01.jpg',
  '/images/00_inicio/02.jpeg',
  '/images/00_inicio/03.png',
  '/images/00_inicio/04.jpg',
  '/images/00_inicio/05.jpg',
  '/images/00_inicio/06.webp',
  '/images/00_inicio/07.jpg',
  '/images/00_inicio/08.jpg',
  '/images/00_inicio/09.jpg',
  '/images/00_inicio/10.jpg'
];
---

<Layout title="Ingeniería y Topografía en Edificaciones, Carreteras y Puentes en Perú | SH & ML S.R.L. Ingeniería Soluciones" description="SH & ML S.R.L. Ingeniería Soluciones ofrece servicios profesionales de ingeniería, topografía, arquitectura, mecánica de suelos y saneamiento físico legal en Arequipa y todo el Perú. Experiencia en obras civiles, edificaciones, carreteras, puentes y más. Contáctenos para su proyecto." showSidebar={false}>
  <h2 class="section-title">¿Quiénes somos?</h2>
    <div class="landing-page">
      <div class="who-we-are grid grid-cols-1 md:grid-cols-3">
        <section class="hero col-span-full md:col-span-2">
          <div class="hero-content">
            <Slider images={imagesPath} client:load />
          </div>
        </section>
    
        <section class="demo-section !pt-0" id="demo">
          <div class="container">
            <p class="demo-description">
              Somos una empresa especializada en el desarrollo de proyectos de <strong>infraestructura civil e industrial</strong>, así como en la ejecución de obras para el sector público y privado.
            </p>
            <p class="demo-description">
              Nuestro compromiso es ofrecer <strong>soluciones integrales, seguras y eficientes</strong>, respaldadas por un equipo técnico altamente calificado y una gestión enfocada en la calidad y el cumplimiento de plazos.
            </p>
            <p class="demo-description">
              Contamos con arquitectos e ingenieros de diversas especialidades —civil, eléctricos, mecánico-eléctricos, sanitarios, entre otros— con amplia experiencia en obras y proyectos ejecutados. 
              Ponemos a su disposición nuestra capacidad técnica y trayectoria para garantizar el éxito de cada proyecto.
            </p>
          </div>
        </section>
      </div>

      <section class="features col-span-full" id="features">
        <div class="container">
          <h2 class="section-title">Servicios</h2>
          <div class="features-grid">
            {allServices.map(service => (
              <a class="feature-card" href={service.path} >
                <h3 class="feature-title">{service.name}</h3>
                <p class="feature-description">{service.description}</p>
              </a>
            ))}
          </div>
        </div>
      </section>
